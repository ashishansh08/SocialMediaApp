<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_20dp"
    tools:context=".ui.user_details.UserDetailsFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewUserDerailsProfilePic"
        android:layout_width="@dimen/dimen_150dp"
        android:layout_height="@dimen/dimen_150dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/textViewUserDetailFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="Full Name"
        android:textSize="@dimen/dimen_textsize_20sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUserDerailsProfilePic"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/textViewUserDetailDesignation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Designation"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/dimen_textsize_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserDetailFullName" />


    <TextView
        android:id="@+id/textViewUserDetailCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/dimen_textsize_16sp"
        tools:text="city"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserDetailDesignation" />

    <TextView
        android:id="@+id/textViewUserDetailComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/dimen_textsize_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        tools:text="Comment"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserDetailCity" />


</androidx.constraintlayout.widget.ConstraintLayout>